class Usuario:
    def __init__(self, nome, email):
        self.nome = nome
        self.email = email

    def exibir_informacoes(self):
        print("-" * 25)
        print(f"Nome: {self.nome}")
        print(f"Email: {self.email}")
        
    def saudacao(self):
        return "Olá, usuário"


class Cliente(Usuario):
    def __init__(self, nome, email, id_cliente, saldo):
        super().__init__(nome, email)
        self.id_cliente = id_cliente
        self.saldo = saldo

    def exibir_informacoes_cliente(self):
        self.exibir_informacoes()
        print(f"ID Cliente: {self.id_cliente}")
        print(f"Saldo: R$ {self.saldo:.2f}")
        print("-" * 25)
        
    def saudacao(self):
        return "Olá, cliente"

class Funcionario(Usuario):
    def __init__(self, nome, email, matricula, cargo):
        super().__init__(nome, email)
        self.matricula = matricula
        self.cargo = cargo

    def exibir_informacoes_funcionario(self):
        self.exibir_informacoes()
        print(f"Matrícula: {self.matricula}")
        print(f"Cargo: {self.cargo}")
        print("-" * 25)

    def saudacao(self):
        return f"Olá, funcionário(a) {self.nome.split()[0]}"

class Gerente(Funcionario):
    def __init__(self, nome, email, matricula, cargo, setor_responsavel):
        super().__init__(nome, email, matricula, cargo)
        self.setor_responsavel = setor_responsavel

    def exibir_informacoes_gerente(self):
        self.exibir_informacoes_funcionario()
        print(f"Setor Responsável: {self.setor_responsavel}")
        print("-" * 25)
        
    def saudacao(self):
        return f"Bem-vindo(a), Gerente {self.nome.split()[0]}"

gerente_teste = Gerente(
    nome="Mariana Costa",
    email="mariana.costa@corp.com",
    matricula="MAT_2024_001",
    cargo="Gerente de Projetos",
    setor_responsavel="Tecnologia"
)

print("-" * 40)
print("Demonstração da Classe Gerente")
print("-" * 40)

saudacao_gerente = gerente_teste.saudacao()
print(f"Saudação do Gerente: {saudacao_gerente}\n")

print("Informações Completas do Gerente:")
gerente_teste.exibir_informacoes_gerente()

print("Acessando info de Funcionario:")
gerente_teste.exibir_informacoes_funcionario()

print("Acessando info de Usuario:")
gerente_teste.exibir_informacoes()