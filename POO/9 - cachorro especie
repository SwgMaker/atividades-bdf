class Cachorro:
    especie = "Canis familiaris"

    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade

dog1 = Cachorro("ninguém", 5)
dog2 = Cachorro("geraldo", 3)

print("Acesso pelo nome da classe:")
print(Cachorro.especie)

print("\nAcesso pelo objeto:")
print(dog1.especie)
print(dog2.especie)

print("\nAtributos de instância:")
print(f"{dog1.nome} tem {dog1.idade} anos.")
print(f"{dog2.nome} tem {dog2.idade} anos.")

Cachorro.especie = "Canis lupus familiaris"

print("\nApós alterar a espécie na classe:")
print("Acesso pelo nome da classe:", Cachorro.especie)
print("Acesso pelo objeto ninguém:", dog1.especie)
print("Acesso pelo objeto geraldo:", dog2.especie)

dog1.especie = "Cachorro doméstico"

print("\nApós alterar a espécie apenas do objeto ninguém:")
print("Acesso pelo nome da classe:", Cachorro.especie)
print("Acesso pelo objeto ninguém:", dog1.especie)
print("Acesso pelo objeto geraldo:", dog2.especie)